<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/vertical_scroll_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/whitesmoke"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/example1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/example1"
                    android:background="@color/whitesmoke"
                    />
                <ImageView
                    android:id="@+id/example2"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/example2"
                    android:layout_marginLeft="10dp"
                    android:background="@color/whitesmoke"
                    />
                <ImageView
                    android:id="@+id/example3"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/example3"
                    android:layout_marginLeft="10dp"
                    android:background="@color/whitesmoke"
                    />
                <ImageView
                    android:id="@+id/example4"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/example4"
                    android:layout_marginLeft="10dp"
                    android:background="@color/whitesmoke"
                    />
                <ImageView
                    android:id="@+id/example5"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/example5"
                    android:layout_marginLeft="10dp"
                    android:background="@color/whitesmoke"
                    />
                <ImageView
                    android:id="@+id/example6"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/example6"
                    android:layout_marginLeft="10dp"
                    android:background="@color/whitesmoke"
                    />
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>

</RelativeLayout>