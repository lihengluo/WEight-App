<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/dp_10">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/v_1"
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="84dp"
            android:layout_height="84dp"
            app:layout_constraintLeft_toRightOf="@+id/v_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/ic_launcher"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营养分析"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@+id/iv_1"
            app:layout_constraintLeft_toRightOf="@+id/iv_1"
            android:layout_marginLeft="12dp"/>
        <RelativeLayout
            android:id="@+id/re_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/iv_more"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            android:layout_marginRight="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#666666"
                android:text="食物名称:"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="食物名称:"
                android:gravity="left"
                android:textColor="#666666"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/iv_more"
            app:layout_constraintTop_toBottomOf="@+id/re_1"
            android:layout_marginRight="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#666666"
                android:text="热量:"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="left"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:text="食物名称:"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/iv_more"
            app:layout_constraintTop_toBottomOf="@+id/re_2"
            android:layout_marginRight="24dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#666666"
                android:text="碳水化合物:"/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="left"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:text="食物名称:"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/iv_more"
            app:layout_constraintTop_toBottomOf="@+id/re_3"
            android:layout_marginRight="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#666666"
                android:text="蛋白质:"/>
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#666666"
                android:gravity="left"
                android:layout_alignParentRight="true"
                android:text="食物名称:"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@mipmap/mm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_1"
            app:layout_constraintBottom_toBottomOf="@id/iv_1"
            android:layout_marginRight="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>