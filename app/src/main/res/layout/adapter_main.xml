<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="@dimen/dp_10">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke">
        <View
            android:id="@+id/v_1"
            android:layout_width="2dp"
            android:layout_height="132dp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猪蹄饭"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/re_1"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/re_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            android:layout_marginTop="0dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_marginLeft="25dp" />

        <RelativeLayout
            android:id="@+id/re_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热量（大卡）："
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="left"
                android:text="0"
                android:textColor="#666666"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="碳水化合物（g）："
                android:textColor="#666666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="left"
                android:text="0"
                android:textColor="#666666"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_2"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:text="蛋白质（g）："/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="left"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:text="0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_3"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="脂肪（g）："
                android:textColor="#666666"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="left"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:text="0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_4"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钙（mg）："
                android:textColor="#666666"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_6"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="left"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:text="0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_5"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="铁（mg）："
                android:textColor="#666666"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#666666"
                android:gravity="left"
                android:layout_alignParentRight="true"
                android:text="0"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>