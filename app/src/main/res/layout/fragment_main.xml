<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="fragment.Fragment_main">


    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg6"
        android:scaleType="centerCrop"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_weight="3.5">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.6">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:src="@drawable/verticalline2"/>
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="每日饮食建议"
                android:maxEms="10"
                android:maxLines="1"
                android:textColor="#F0B155"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left|center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4">
        <ScrollView
            android:id="@+id/vertical_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <include layout="@layout/scollview_item"
                    android:id="@+id/layout1" />

                <include layout="@layout/scollview_item"
                    android:id="@+id/layout2" />

                <include layout="@layout/scollview_item"
                    android:id="@+id/layout3" />

                <include layout="@layout/scollview_item"
                    android:id="@+id/layout4" />

            </LinearLayout>
        </ScrollView>
        </LinearLayout>

    <!--<EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:hint="食品名称"
        android:maxLines="1"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_foodname"
        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        >
        <Button
            android:id="@+id/take_photo"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="拍 \t\t 照"
            android:textSize="20sp"
            android:background="@drawable/login"
            />
        <Button
            android:id="@+id/choose_from_album"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="从相册选取"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:background="@drawable/login"
            />
    </LinearLayout>
    </LinearLayout>

</FrameLayout>